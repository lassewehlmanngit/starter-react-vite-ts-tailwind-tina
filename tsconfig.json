{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": false,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["node", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@content/*": ["content/*"]
    }
  },
  "include": ["src", "scripts", "tina", "tests", "vite.config.ts", "tailwind.config.ts", "vitest.config.ts", "playwright.config.ts"]
}
