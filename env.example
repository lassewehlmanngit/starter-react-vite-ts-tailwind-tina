# ===========================================
# Marketing Site Starter - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values.
# Never commit .env.local to version control.

# Base URL (used for sitemap, canonical URLs, OG tags)
VITE_BASE_URL=https://your-site.onrender.com

# ===========================================
# TinaCMS (Tina Cloud)
# ===========================================
# Get these from https://app.tina.io after creating a project.
# For local development, leave empty to use Local Mode (no auth).
TINA_CLIENT_ID=
TINA_TOKEN=

# ===========================================
# Error Monitoring (Sentry)
# ===========================================
VITE_SENTRY_DSN=
VITE_ENVIRONMENT=development

# ===========================================
# Analytics (optional)
# ===========================================
# Google Tag Manager
VITE_GTM_ID=

# Umami Analytics
VITE_UMAMI_WEBSITE_ID=
VITE_UMAMI_SRC=

# ===========================================
# CRM Integration (optional)
# ===========================================
VITE_CRM_PROVIDER=email
VITE_CRM_RECIPIENT_EMAIL=info@example.com

# HubSpot
VITE_HUBSPOT_API_KEY=

# Salesforce
VITE_SALESFORCE_CLIENT_ID=
VITE_SALESFORCE_CLIENT_SECRET=

# Pipedrive
VITE_PIPEDRIVE_API_TOKEN=
